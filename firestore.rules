rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == 'kiru72fekadu@gmail.com';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read all user data
      allow read: if isAdmin();
    }
    
    // Allow authenticated users to read location data
    match /locations/{locationId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Allow authenticated users to read and write their own chat messages
    match /chatMessages/{messageId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
      // Admins can read all chat messages
      allow read: if isAdmin();
    }
    
    // Allow authenticated users to access their payment data
    match /payments/{paymentId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
      // Admins can read all payment data
      allow read: if isAdmin();
    }
    
    // Allow authenticated users to read and write their own subscription data
    match /subscriptions/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read and write all subscription data
      allow read, write: if isAdmin();
    }
    
    // Allow authenticated users to read public travel data
    match /travelData/{document} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Allow authenticated users to manage their own language learning progress
    match /languageProgress/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      // Admins can read all language progress
      allow read: if isAdmin();
    }
    
    // Emergency data - read only for authenticated users
    match /emergency/{document} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Settings and configuration - read only for all authenticated users
    match /appSettings/{document} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Admin-specific collections
    match /admin/{document} {
      allow read, write: if isAdmin();
    }
    
    // Lesson management - admins can create/edit lessons
    match /lessons/{lessonId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Analytics and reports - admin only
    match /analytics/{document} {
      allow read, write: if isAdmin();
    }
    
    // User management - admin only
    match /userManagement/{document} {
      allow read, write: if isAdmin();
    }
  }
}
